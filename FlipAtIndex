
public class FlipAtIndex {

	public FlipAtIndex(int index, int[] array) {
		
		StringBuilder sb = new StringBuilder();
		
		for(int i=0;i<index;i++)
		{sb.append(array[i]);}
		
		for(int j=array.length-1;j>=index;j--)
		{sb.append(array[j]);}
		
		System.out.println("Index is :"+ index +"  "+   sb.toString());
	}
	public static void main(String[] args) {
		new FlipAtIndex(0, new int[]{1,4,0,6,7});
		new FlipAtIndex(2, new int[]{1,4,0,6,7});
		new FlipAtIndex(4, new int[]{1,4,0,6,7});
	}
}
